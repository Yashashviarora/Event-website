
<marquee direction="right" scrollamount="10"><h1 class=" pt-4 pb-4 text-capitalize  text-center"> EXPLORE  different categories</h1>
</marquee>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item "><a href="/">Home</a></li>
    <li class="breadcrumb-item "><a href="/categories" >Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
  </ol>
</nav>



<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(typeof categories !== 'undefined' && categories.length > 0) { %>
        <% categories.forEach(function(category){ %>
      <a href="/categories/<%- category.name %>" class="col text-center category__link">
      <div class="category__img--large shadow">
        <img src="img/<%- category.image %>"   alt="<%- category.name %>" loading="lazy">
      </div>
      <div class="pt-1 text-capitalize"><%- category.name %></div>
    </a>
     <% }) %>
  <%}%>
</div>
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof categoryById !== 'undefined' && categoryById.length > 0) { %>
    <% categoryById.forEach(function(recipe, index){ %>
    <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/img/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>